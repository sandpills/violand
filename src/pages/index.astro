<script>
	const dropdown = document.getElementById("more");
	const rcSection = document.getElementById("rc-section");
	// let toggleMore = false;

	dropdown?.addEventListener("click", async function () {
		if (dropdown && rcSection?.classList.contains("show")) {
			rcSection?.classList.add("hide");
			dropdown.textContent;
			rcSection?.classList.remove("show");
		} else if (dropdown) {
			rcSection?.classList.add("show");
			rcSection?.classList.remove("hide");
		}
	});
</script>

<style>
	.hide {
		display: none;
	}
	.show {
		display: block;
	}
</style>
